.jumbotron.white
  %h1 Listing Task
  .btn.btn-default.pull-right= link_to 'Create Task', new_task_path
  %table.table
    %tr
      %th Title
      %th Description
      %th
      %th
      %th

    - @tasks.each do |task|
      %tr
        %td= task.title
        %td= task.description
        %td= link_to 'Show', task, class: 'btn btn-primary'
        %td= link_to 'Edit', edit_task_path(task), class: 'btn btn-success'
        %td= link_to 'Destroy', task, class: 'btn btn-danger', :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br
  %br
  = link_to 'Download CSV', tasks_path(format: :csv), class: 'btn btn-default'
