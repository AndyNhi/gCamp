.jumbotron
  = form_for(@task, html: {class: "form-horizontal"}) do |f|
    - if @task.errors.any?
      #error_explanation
        %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
        %ul
          - @task.errors.full_messages.each do |msg|
            %li= msg

    .field.form-group
      = f.label :description, :class => 'col-sm-2 control-label'
      = f.text_field :description, :class => "form-control"
    .field.form-group
      = f.label :due_date, :class => 'col-sm-2 control-label'
      = f.date_field :due_date, :class => "form-control"
    - unless current_page?(new_task_path)
      .field.form-group
        = f.label :complete, :class => 'col-sm-2 control-label'
        = f.check_box :complete, :class => "form-control"
    .form-group
      - if @new_page
        = f.submit :class => 'col-sm-offset-2 btn btn-primary'
      - elsif @edit_page
        = f.submit :class => 'col-sm-offset-2 btn btn-primary'
