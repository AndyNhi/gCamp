.page-header
  .pull-right
    = link_to('Edit', edit_project_task_path(@project, @task), class: 'btn btn-info')
  %h1= "Task for #{@task.description}"


%ol.breadcrumb
  %li= link_to('Projects', projects_path)
  %li= link_to(@task.description, project_path(@project))
  %li= link_to('Tasks', project_tasks_path)
  %li.active= 'Show'

%h2 Comments
%p= "Description: #{@task.description}"
%p= "Completion: #{@task.complete}"
%p= "Due Date: #{if @task.due_date.nil? then 'Infinite' else @task.due_date.strftime("%B %e, %Y") end}"

- @comments.each do |comment|
  .row
    .col-md-3
      - if comment.user == nil
        = "deleted user"
      -else
        = link_to("#{comment.user.first_name} #{comment.user.last_name}", user_path(comment.user))
      .text-muted
        = "#{time_ago_in_words(comment.created_at)} ago"
    .col-md-off-set-3
      = comment.copy

.row
  - if current_user.present?
    .col-md-offset-3
      = render 'form_comment'


.padding_adjustment
