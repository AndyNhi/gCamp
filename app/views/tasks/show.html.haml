%ol.breadcrumb
  %li= link_to('Task', project_tasks_path)
  %li.active= 'Show Task'

.jumbotron
  %table.table-condensed
    %tr
      %th Description: &nbsp;
      %td= @task.description
    %tr
      %th Completion: &nbsp;
      %td= @task.complete
    %tr
      %th Due Date: &nbsp;
      - if @task.due_date.nil?
        %td Infinite
      - else
        %td= @task.due_date.strftime("%B %e, %Y")
    %tr
      %th
        = link_to 'Edit', edit_project_task_path(@project, @task)
        = "|"
        = link_to 'Back', project_tasks_path

%table
  %thead
    %h2 Comments
  %tbody
    - @comments.each do |comment|
      %tr
        .col-md-3
          %td
            = link_to(comment.user.first_name, user_path(comment.user))
            .text-muted
              = "#{time_ago_in_words(comment.created_at)} ago"
        .col-md-9
          %td
            = comment.copy
= render 'form_comment'
