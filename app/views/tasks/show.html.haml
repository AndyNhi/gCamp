%ol.breadcrumb
  %li= link_to('Task', tasks_path)
  %li.active= 'Show Task'

.jumbotron
  %table.table-condensed
    %tr
      %th Description: &nbsp;
      %td= @task.description
    %tr
      %th Completion: &nbsp;
      %td= @task.complete
    %tr
      %th Due Date: &nbsp;
      - if @task.due_date.nil?
        %td Infinite
      - else
        %td= @task.due_date.strftime("%B %e, %Y")
    %tr
      %th
        = link_to 'Edit', edit_task_path(@task)
        = "|"
        = link_to 'Back', tasks_path
