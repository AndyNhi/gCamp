.pull-right
  = link_to('Edit', edit_project_path, class: 'btn btn-primary')
  = link_to('Destroy', @project, :method => :delete, class: 'btn btn-danger')
%h1= link_to('Projects Page', projects_path)

%ol.breadcrumb
  %li= link_to('Projects', projects_path)
  %li.active= (@project.description)

%table
  %thead
    %th
  %tbody
    %tr
      %td= link_to("#{@project.tasks.count} Tasks", project_tasks_path(@project))
    %tr
      %td= link_to("#{@project.memberships.count} Members", project_memberships_path(@project))
