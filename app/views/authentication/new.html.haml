.row
  .col-sm-offset-4.col-sm-4
    .well
      %h2 Sign In
      = form_tag signin_path do |f|
        - if @sign_in_error
          .alert.alert-danger= @sign_in_error
        .form-group
          = label_tag :email_address, nil, class: 'control-label'
          = email_field_tag :email_address, nil, class: "form-control"
        .form-group
          = label_tag :password,  nil, class: 'control-label'
          = password_field_tag :password, nil, class: "form-control"
        .form-group
          = submit_tag 'Log In', class: 'btn btn-primary'
