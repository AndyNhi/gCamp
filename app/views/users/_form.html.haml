.jumbotron
  = form_for(@user, html: {class: "form-horizontal"}) do |f|
    .form-group
      = f.label :first_name, :class => 'col-sm-2 control-label'
      .col-sm-5
        = f.text_field :first_name, :class => "form-control"

    .form-group
      = f.label :last_name, :class => 'col-sm-2 control-label'
      .col-sm-5
        = f.text_field :last_name, :class => "form-control"

    .form-group
      = f.label :email_address, :class => 'col-sm-2 control-label'
      .col-sm-5
        = f.text_field :email_address, :class => "form-control"

    .form-group
      .col-sm-offset-2.col-sm-10
        = f.submit :class => 'btn btn-primary'

    - if @user.id?
      .form-group
        .col-sm-offset-2.col-sm-10
          = link_to 'Destroy', @user,class: 'btn btn-danger', :method => :delete, :data => { :confirm => 'Are you sure?' }
