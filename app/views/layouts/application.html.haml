!!!
%html
  %head
    %title GCamp
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        = link_to 'gCamp', root_path, :class => 'navbar-brand'

  %body
  .container.white
    .padding_adjustment
    = yield

    .footerline
      %footer
        = link_to_unless_current 'About', about_path, :class => 'footer-line'
        &nbsp;
        = link_to_unless_current 'Terms', term_path
        &nbsp;
        = link_to_unless_current 'FAQ', faq_path
