!!!
%html
  %head
    %title GCamp
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        = link_to root_path do
          =image_tag('gschool.png', width: '8%', :class => 'navbar-brand')

  %body
  .container.white
    .padding_adjustment
    - unless notice.nil?
      %p.alert.alert-success= notice
    = yield

    .footerline
      %footer
        = link_to_unless_current 'About', about_path
        = link_to_unless_current 'Terms', term_path
        = link_to_unless_current 'FAQ', faq_path
        = link_to 'https://linkedin.com/in/andynhi/' do
          = image_tag('linkin_img.png', width: '20em', class: 'col-md-offset-10')
        = link_to 'https://github.com/AndyNhi' do
          = image_tag('github_img.png', width: '20em')
        = link_to 'https://github.com/AndyNhi' do
          = image_tag('twitter_img.png', width: '20em')
