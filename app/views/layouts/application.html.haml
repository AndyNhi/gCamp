!!!
%html
  %head
    %title GCamp
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

    .navbar.navcolor.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} gCamp

  %body
    = yield

.footerline

.container
  %footer
    %ul.footer_bar
      %li.inline= link_to 'About', about_path, :class => 'footer_li'
      %li.inline= link_to 'Terms', term_path, :class => 'footer_li'
      %li.inline= link_to 'FAQ', faq_path, :class => 'footer_li'
