.container
  .jumbotron
    %h1 gCamp!
    %p Your life organized.
  .row
    .col-md-4
      =image_tag('image.jpg', :class => 'img-responsive')
      .panel.panel-default
        .panel-heading
          %h2 Task

          %p Group Project and list just the way you like them.
          %p
          %a.button.btn.btn-default.btn-lg{:type => "button", :href => "/pages/task"} Task
    .col-md-4
      =image_tag('image.jpg', :class => 'img-responsive')
      .panel.panel-default
        .panel-heading
          %h2 Documents
          %ol
            %li Upload
            %li Comment
            %li Revise
          %a.button.btn.btn-default.btn-lg{:type => "button", :href => "/pages/documents"} Document
    .col-md-4
      =image_tag('image.jpg', :class => 'img-responsive')
      .panel.panel-default
        .panel-heading
          %h2 Comments
          %ol
            %li Comments on task and documents
            %li Get email notificationsch
          %a.button.btn.btn-default.btn-lg{:type => "button", :href => '/pages/comments' } Comments

