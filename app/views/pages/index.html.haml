.jumbotron
  %h1 gCamp!
  %p Your life organized.
  %p
    -if current_user
      = "Welcome " + current_user.first_name + "!"


.row
  - @columns.each do |title, description|
    .col-md-4
      =image_tag('image.jpg', :class => 'img-responsive')
      .panel.panel-default
        .panel-heading
          %h2.panel-title
            = title
          .panel-body
          - if description.length <= 1
            %p
              = description[0]
          -else
            %ul
              - description.each do |description|
                %li
                  = description

- @qas.sample(3).each do |qa|
  %blockquote
    %p
      = qa[:quote_line]
    %footer
      = qa[:author]
